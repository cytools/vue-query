{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "amd",
        "outFile": "dist/index.js",
        "moduleResolution": "node",
        "skipLibCheck": false,
        "noLib": false,
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "importHelpers": true,
        "stripInternal": true,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "tests"
    ]
}
